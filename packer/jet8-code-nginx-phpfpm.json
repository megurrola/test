{
  "variables": {
    "region": "ap-southeast-1",
    "aws_access_key": "",
    "aws_secret_key": "",
    "instance_type": "t2.micro",
    "source_ami_name": "jet8-base-nginx-phpfpm-*",
    "owner": "DevOps",
    "name": "jet8-code-nginx-phpfpm"
  },

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "instance_type": "{{user `instance_type`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "{{user `source_ami_name`}}",
        "root-device-type": "ebs"
      },
      "owners": ["435960735245"],
      "most_recent": true
    }, 
    "ssh_username": "ubuntu",
    "associate_public_ip_address": true,
    "ami_name": "{{user `name`}}-{{timestamp}}",
    "force_deregister": true,
    "force_delete_snapshot": true,
    "vpc_id": "vpc-b24ca8d7",
    "tags": {
      "owner": "{{user `owner`}}",
      "Name": "{{user `name`}}"
    },
    "run_tags": {
      "owner": "{{user `owner`}}",
      "Name": "{{user `name`}}"
    },
    "run_volume_tags": {
      "owner": "{{user `owner`}}",
      "Name": "{{user `name`}}"
    },
    "snapshot_tags": {
      "owner": "{{user `owner`}}",
      "Name": "{{user `name`}}"
    }
  }],

"provisioners": [
  {
    "type": "shell",
    "inline": ["sudo chmod 777 /home/forge/apps.beta.jet8.io/current/public"]
  },
  {
    "type": "file",
    "source": "../index.php",
    "destination": "/home/forge/apps.beta.jet8.io/current/public/index.php"
  },
  {
    "type": "ansible",
    "playbook_file": "../ansible/create_user_data_script.yml",
    "user": "ubuntu"
  }
  ]
}
